@page
@model RazorUI.Pages.GroupPermission.CreateModel
@{
    ViewData["Title"] = "Create Group Permission";
}

<h2>Create Group Permission</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="GroupPermission.GroupId"></label>
        <select asp-for="GroupPermission.GroupId" class="form-control" asp-items="Model.GroupList"></select>
    </div>
    <div class="form-group">
        <label asp-for="GroupPermission.PermissionId"></label>
        <select asp-for="GroupPermission.PermissionId" class="form-control" asp-items="Model.PermissionList"></select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
