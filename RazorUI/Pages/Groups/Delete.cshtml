@page
@model RazorUI.Pages.Groups.DeleteModel
@{
    ViewData["Title"] = "Delete Group";
}

<h1>Delete Group</h1>

<h4>Are you sure you want to delete this group?</h4>
<div>
    <strong>Name:</strong> @Model.Group.Name
</div>

<form method="post">
    <input type="hidden" asp-for="Group.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
