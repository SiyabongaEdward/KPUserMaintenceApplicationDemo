@page
@model RazorUI.Pages.IndexModel
<h2>Users</h2>

@if (Model.Users == null || !Model.Users.Any())
{
    <p>No users found.</p>
}
else
{
    <h3>Total Users: @Model.TotalUsers</h3>
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-page="Users/Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a> |
                        <a asp-page="Users/Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-page="Users/Create" class="btn btn-primary">Add New User</a>
