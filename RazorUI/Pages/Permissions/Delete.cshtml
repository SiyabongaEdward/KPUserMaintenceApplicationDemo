@page
@model RazorUI.Pages.Permissions.DeleteModel
@{
    ViewData["Title"] = "Delete Permission";
}

<h2>Delete Permission</h2>

<h4>Are you sure you want to delete this permission?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Permission.Name</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Permission.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
