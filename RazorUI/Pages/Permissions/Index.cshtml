@page
@model RazorUI.Pages.Permissions.IndexModel
@{
    ViewData["Title"] = "Permissions";
}

<h2>Permissions</h2>

<a class="btn btn-primary mb-3" asp-page="./Create">Add New Permission</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var permission in Model.Permissions)
        {
            <tr>
                <td>@permission.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@permission.Id" class="btn btn-sm btn-warning">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@permission.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
