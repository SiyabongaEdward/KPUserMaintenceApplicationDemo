@page "{id:guid}"
@model RazorUI.Pages.UserGroups.DeleteModel
@{
    ViewData["Title"] = "Delete User Group";
}

<h1>Delete User Group</h1>

<h4>Are you sure you want to delete this?</h4>
<div>
    <strong>User :</strong> @Model.UserGroup.FullName <br />
    <strong>Group Name:</strong> @Model.UserGroup.GroupName
</div>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="UserGroup.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
