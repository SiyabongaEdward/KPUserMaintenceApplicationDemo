@page
@model RazorUI.Pages.UserGroups.IndexModel
@{
    ViewData["Title"] = "User Groups";
}

<h2>User Groups</h2>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

@foreach (var group in Model.GroupedUserGroups)
{
    <h3>@group.GroupName (@group.Users.Count users)</h3>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 70%;">User</th>
                <th style="width: 30%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in group.Users)
            {
                <tr>
                    <td>@user.FullName</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
